generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  username String
  hashed_password String
  concerns String?
  skin_type String?
  loved_products String? @default("")
  saved_products String? @default("")
}

model Ingredient{
  id Int @id @default(autoincrement())
  name String
  ingredient_type String
  purpose String
  skin_type String
}

model ProductInfo{
  id Int @id @default(autoincrement())
  concerns String
  skin_type String
}
