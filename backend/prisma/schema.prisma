enum product_type_enum {
    serum
    toner
    sunscreen
    moisturizer
    retinol
    mask
    cleanser
    eye_cream
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  username String @unique
  password String
  concerns Json?
  skin_type Json?
  loved_products ProductInfo[] @relation("loved")
  saved_products ProductInfo[] @relation("saved")
}

model Ingredient{
  id Int @id @default(autoincrement())
  name String
  ingredient_type String
  concern String
  skin_type String
}

model ProductInfo{
  id Int @id @default(autoincrement()) //id in the database
  brand String
  name String
  image String?
  product_type product_type_enum ?
  price String
  ingredients String[]
  concerns String[]
  skin_type String[]
  loved_by_user User[] @relation("loved")
  saved_by_user User[] @relation("saved")
}
